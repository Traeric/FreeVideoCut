.display
  height calc(100% - 5px)
  background-color #212429
  border-radius 6px
  margin 5px 5px 0 0
  position relative
  .loading
    position absolute
    inset 0
    display flex
    align-items center
    justify-content center
    background-color rgba(0, 0, 0, .5)
    .spin
      :deep(.arco-spin-tip)
        color #ff9626
      :deep(.arco-dot-loading-item)
        background-color #ff9626
  .video-area
    height calc(100% - 120px)
    width 100%
    position relative
    .video-player
      width 70%
      height 100%
      display flex
      align-content center
      justify-content center
      background-color #000
      margin 20px auto 0
    .export
      position absolute
      right 20px
      top 0
      .export-btn
        cursor pointer
        background-color #212429
        border 2px solid #575c60
        color rgba(255, 255, 255, .8)
        display flex
        align-items center
        gap 5px
        padding 6px 12px
        border-radius 4px
        transition all 0.3s ease
        user-select none
        &:hover
          border-color #ff9626
          box-shadow 0 4px 8px rgba(255, 150, 38, 0.5);
          transform translateY(-2px)
        &:active
          transform translateY(0)
        .export-icon
          width 28px
          height 28px
  .play-area
    display flex
    height 60px
    align-content center
    .control
      width 0
      flex 0 0 120px
      font-size 26px
      color rgba(255, 255, 255, 0.5)
      height 100%
      display flex
      align-items center
      justify-content center
      .audio-icon
        width 32px
        height 32px
        display flex
        align-items center
        justify-content center
        margin-right 10px
        .icon
          cursor pointer
          width 32px
          height 32px
        .mute-icon
          width 28px
          height 28px
      .play-icon
        width 32px
        height 32px
        display flex
        align-items center
        justify-content center
        margin-right 10px
        .icon
          cursor pointer
          width 32px
          height 32px
        .pause-icon
          width 28px
          height 28px
    .progress
      flex 1
      display flex
      align-items center
      .progress-line
        width 100%
        height 4px
        background-color #333
        border-radius 8px
        cursor pointer
        position relative
        margin-right 15px
        .passed
          height 4px
          border-radius 8px
          background-color #ff7d00
          width 0
        .progress-bar
          position absolute
          top -10px
          transition none
          img
            width 26px
            height 26px
            margin-left -13px
    .time
      width 0
      flex 0 0 150px
      text-align center
      color rgba(255, 255, 255, .5)
      line-height 60px
      .played
        color #ff7d00

.volum-setting
  display flex
  width 200px
  .setting
    margin-right 10px

    :deep(.arco-slider-bar)
      background-color #ff7d00
    :deep(.arco-slider-btn:after)
      border-color #ff7d00 !important